<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/et_add_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_color" />

    <EditText
        android:id="@+id/et_add_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_model" />

    <EditText
        android:id="@+id/et_add_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_body" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_year"

            />

        <Button
            android:id="@+id/btn_add_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:text="@string/choose" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_save_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save" />



</LinearLayout>